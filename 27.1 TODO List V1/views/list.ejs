<!DOCTYPE html>
<html lang="en">
  <%- include('header') -%>
  <body>
    <div class="box" id="heading">
      <h1><%= day %></h1>
    </div>

    <div class="box">
      <% items.forEach((el) => { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="hidden" name="currentList" value="<%= listItem %>" />
          <input
            type="checkbox"
            name="currentItem"
            value="<%= el %>"
            onChange="this.form.submit()"
          />
          <p><%= el %></p>
        </div>
      </form>
      <% }) %>

      <form class="item" action="/<%= listItem %>" method="POST">
        <input
          type="text"
          name="newItem"
          placeholder="New item"
          autocomplete="off"
          required
        />
        <button type="submit" name="button">+</button>
      </form>
    </div>
  </body>
</html>
